    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "glob": "^11.0.0",
    "minimatch": "^10.0.1",
    "ora": "^8.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
