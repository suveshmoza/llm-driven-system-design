{
  "name": "twitter-backend",
  "version": "1.0.0",
  "description": "Twitter-like microblogging platform backend",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "dev:fanout-worker": "tsx watch src/workers/fanout-worker.ts",
    "dev:trending-worker": "tsx watch src/workers/trending-worker.ts",
    "dev:worker1": "FANOUT_CONSUMER_GROUP=fanout-workers-1 tsx watch src/workers/fanout-worker.ts",
    "dev:worker2": "FANOUT_CONSUMER_GROUP=fanout-workers-2 tsx watch src/workers/fanout-worker.ts",
    "start": "tsx src/index.ts",
    "start:fanout-worker": "tsx src/workers/fanout-worker.ts",
    "start:trending-worker": "tsx src/workers/trending-worker.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:seed": "tsx src/db/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "multer": "^1.4.5-lts.1",
    "opossum": "^9.0.0",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.0.0",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
