{
  "name": "distributed-cache-backend",
  "version": "1.0.0",
  "description": "A distributed cache server with consistent hashing, LRU eviction, and TTL support",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:server1": "PORT=3001 NODE_ID=node-1 tsx watch src/server.ts",
    "dev:server2": "PORT=3002 NODE_ID=node-2 tsx watch src/server.ts",
    "dev:server3": "PORT=3003 NODE_ID=node-3 tsx watch src/server.ts",
    "start": "node dist/server.js",
    "coordinator": "PORT=3000 tsx watch src/coordinator.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "cache",
    "distributed",
    "consistent-hashing",
    "lru",
    "ttl"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "morgan": "^1.10.0",
    "opossum": "^9.0.0",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.15.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  }
}
