{
  "name": "findmy-backend",
  "version": "1.0.0",
  "description": "Find My Network backend - AirTag-like item tracking system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "dev:worker": "tsx watch src/workers/location-worker.ts",
    "dev:worker1": "WORKER_ID=1 tsx watch src/workers/location-worker.ts",
    "dev:worker2": "WORKER_ID=2 tsx watch src/workers/location-worker.ts",
    "dev:notification-worker": "tsx watch src/workers/notification-worker.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:worker": "node dist/workers/location-worker.js",
    "start:notification-worker": "node dist/workers/notification-worker.js",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/amqplib": "^0.10.8",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/pino-http": "^5.8.4",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "globals": "^15.14.0",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.18.2"
  }
}
