{
  "name": "web-crawler-backend",
  "version": "1.0.0",
  "description": "Distributed web crawler backend with URL frontier and worker management",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:server1": "PORT=3001 tsx watch src/server.ts",
    "dev:server2": "PORT=3002 tsx watch src/server.ts",
    "dev:server3": "PORT=3003 tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "dev:worker1": "WORKER_ID=1 tsx watch src/worker.ts",
    "dev:worker2": "WORKER_ID=2 tsx watch src/worker.ts",
    "dev:worker3": "WORKER_ID=3 tsx watch src/worker.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.ts",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cockatiel": "^3.2.1",
    "compression": "^1.7.4",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "robots-parser": "^3.0.1",
    "url-parse": "^1.5.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "globals": "^15.14.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.18.2"
  }
}
