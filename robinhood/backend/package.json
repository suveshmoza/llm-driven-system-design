{
  "name": "robinhood-backend",
  "version": "1.0.0",
  "description": "Stock trading platform backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "dev:quote-broadcaster": "BROADCASTER_PORT=3010 tsx watch src/workers/quote-broadcaster.ts",
    "dev:quote-broadcaster2": "BROADCASTER_PORT=3012 CONSUMER_GROUP=quote-broadcasters-2 tsx watch src/workers/quote-broadcaster.ts",
    "dev:portfolio-updater": "UPDATER_PORT=3011 tsx watch src/workers/portfolio-updater.ts",
    "dev:portfolio-updater2": "UPDATER_PORT=3013 CONSUMER_GROUP=portfolio-updaters-2 tsx watch src/workers/portfolio-updater.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:quote-broadcaster": "node dist/workers/quote-broadcaster.js",
    "start:portfolio-updater": "node dist/workers/portfolio-updater.js",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "ioredis": "^5.4.1",
    "kafkajs": "^2.2.4",
    "opossum": "^9.0.0",
    "pg": "^8.13.1",
    "pino": "^10.2.0",
    "prom-client": "^15.1.3",
    "uuid": "^11.0.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.18.2"
  }
}
