{
  "name": "google-search-backend",
  "version": "1.0.0",
  "description": "Web search engine backend with crawling, indexing, and ranking",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "crawl": "tsx src/scripts/crawl.ts",
    "build-index": "tsx src/scripts/buildIndex.ts",
    "calculate-pagerank": "tsx src/scripts/calculatePageRank.ts",
    "seed": "tsx scripts/seed.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.3.2",
    "natural": "^6.10.4",
    "node-cron": "^3.0.3",
    "opossum": "^9.0.0",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "robots-parser": "^3.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.55.0",
    "prettier": "^3.4.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
