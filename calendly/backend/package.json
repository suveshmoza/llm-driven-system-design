{
  "name": "calendly-backend",
  "version": "1.0.0",
  "description": "Calendly-like meeting scheduling platform backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:archive-bookings": "tsx -e \"import { archivalService } from './src/services/archivalService.js'; archivalService.archiveOldBookings().then(console.log).catch(console.error).finally(() => process.exit())\"",
    "db:maintenance": "tsx -e \"import { archivalService } from './src/services/archivalService.js'; archivalService.runAllMaintenance().then(console.log).catch(console.error).finally(() => process.exit())\"",
    "db:storage-stats": "tsx -e \"import { archivalService } from './src/services/archivalService.js'; archivalService.getStorageStats().then(s => console.log(JSON.stringify(s, null, 2))).catch(console.error).finally(() => process.exit())\"",
    "dev:worker": "tsx watch src/workers/notification-worker.ts",
    "dev:worker1": "WORKER_ID=1 tsx watch src/workers/notification-worker.ts",
    "dev:worker2": "WORKER_ID=2 tsx watch src/workers/notification-worker.ts"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "express": "^4.21.0",
    "express-session": "^1.18.0",
    "ioredis": "^5.4.1",
    "pg": "^8.12.0",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.5.0",
    "@types/pg": "^8.11.8",
    "@types/pino-http": "^5.8.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
