{
  "name": "scale-ai-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n collection,admin,inference -c blue,green,magenta \"npm run dev:collection\" \"npm run dev:admin\" \"npm run dev:inference\"",
    "dev:collection": "tsx watch src/collection/index.ts",
    "dev:admin": "tsx watch src/admin/index.ts",
    "dev:inference": "tsx watch src/inference/index.ts",
    "dev:server1": "PORT=3001 npm run dev:collection",
    "dev:server2": "PORT=3002 npm run dev:admin",
    "dev:server3": "PORT=3003 npm run dev:inference",
    "db:migrate": "tsx src/db/migrate.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "minio": "^8.0.0",
    "pg": "^8.12.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
