{
  "name": "scale-ai-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n collection,admin,inference -c blue,green,magenta \"npm run dev:collection\" \"npm run dev:admin\" \"npm run dev:inference\"",
    "dev:collection": "tsx watch src/collection/index.ts",
    "dev:admin": "tsx watch src/admin/index.ts",
    "dev:inference": "tsx watch src/inference/index.ts",
    "dev:server1": "PORT=3001 npm run dev:collection",
    "dev:server2": "PORT=3002 npm run dev:admin",
    "dev:server3": "PORT=3003 npm run dev:inference",
    "db:seed-admin": "tsx src/db/seed-admin.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "ioredis": "^5.9.2",
    "minio": "^8.0.0",
    "pg": "^8.12.0",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.6",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.14.0",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.0.0"
  }
}
