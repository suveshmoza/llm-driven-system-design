{
  "name": "payment-system-backend",
  "version": "1.0.0",
  "description": "Payment processing system backend with double-entry ledger",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "dev:webhook-worker": "tsx watch src/workers/webhook-worker.ts",
    "dev:fraud-worker": "tsx watch src/workers/fraud-worker.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:webhook-worker": "node dist/workers/webhook-worker.js",
    "start:fraud-worker": "node dist/workers/fraud-worker.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx src/db/migrate.ts"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "bcrypt": "^5.1.1",
    "cockatiel": "^3.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "ioredis": "^5.4.1",
    "pg": "^8.12.0",
    "pino": "^10.2.0",
    "prom-client": "^15.1.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@types/pg": "^8.11.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.10.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
