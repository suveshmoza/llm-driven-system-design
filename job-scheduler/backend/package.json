{
  "name": "job-scheduler-backend",
  "version": "1.0.0",
  "description": "Distributed job scheduler backend with scheduler, worker, and API services",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:api": "PORT=3001 ts-node-dev --respawn --transpile-only src/api/server.ts",
    "dev:scheduler": "ts-node-dev --respawn --transpile-only src/scheduler/index.ts",
    "dev:worker1": "WORKER_ID=worker-1 ts-node-dev --respawn --transpile-only src/worker/index.ts",
    "dev:worker2": "WORKER_ID=worker-2 ts-node-dev --respawn --transpile-only src/worker/index.ts",
    "dev:worker3": "WORKER_ID=worker-3 ts-node-dev --respawn --transpile-only src/worker/index.ts",
    "migrate": "ts-node src/db/migrate.ts",
    "seed": "ts-node src/db/seed.ts",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express-session": "^1.18.2",
    "@types/opossum": "^8.1.9",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron-parser": "^4.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "ioredis": "^5.3.2",
    "opossum": "^9.0.0",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "globals": "^15.14.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.18.2"
  }
}
