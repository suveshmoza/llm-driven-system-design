{
  "name": "bitly",
  "frontendPort": 5173,
  "backendPort": 3000,
  "backendRequired": true,
  "dbName": "bitly",
  "dbUser": "bitly",
  "auth": {
    "enabled": true,
    "loginUrl": "/login",
    "credentials": {
      "email": "alice@example.com",
      "password": "password123"
    },
    "usernameSelector": "input[name='email'], input[type='email']",
    "passwordSelector": "input[name='password'], input[type='password']",
    "submitSelector": "button[type='submit']",
    "successIndicator": "main"
  },
  "screens": [
    {
      "name": "01-login-page",
      "path": "/login",
      "waitFor": "form",
      "skipAuth": true,
      "delay": 500
    },
    {
      "name": "02-home-page",
      "path": "/",
      "waitFor": "h1",
      "skipAuth": true,
      "delay": 800
    },
    {
      "name": "03-dashboard-with-urls",
      "path": "/dashboard",
      "waitFor": ".space-y-3, h2",
      "delay": 2000
    },
    {
      "name": "04-admin-overview",
      "path": "/admin",
      "waitFor": "main",
      "delay": 1000
    }
  ],
  "viewport": {
    "width": 1440,
    "height": 900
  }
}
