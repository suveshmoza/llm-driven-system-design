{
  "name": "scalable-api-backend",
  "version": "1.0.0",
  "description": "Scalable API backend with gateway, load balancer, and API servers",
  "type": "module",
  "scripts": {
    "dev:gateway": "node --watch gateway/src/index.js",
    "dev:lb": "node --watch load-balancer/src/index.js",
    "dev:server1": "PORT=3001 INSTANCE_ID=api-1 node --watch api-server/src/index.js",
    "dev:server2": "PORT=3002 INSTANCE_ID=api-2 node --watch api-server/src/index.js",
    "dev:server3": "PORT=3003 INSTANCE_ID=api-3 node --watch api-server/src/index.js",
    "dev:all": "concurrently \"npm run dev:gateway\" \"npm run dev:lb\" \"npm run dev:server1\" \"npm run dev:server2\" \"npm run dev:server3\"",
    "start:gateway": "node gateway/src/index.js",
    "start:lb": "node load-balancer/src/index.js",
    "start:server": "node api-server/src/index.js",
    "db:migrate": "node src/db/migrate.js up",
    "db:migrate:down": "node src/db/migrate.js down",
    "db:migrate:status": "node src/db/migrate.js status",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "opossum": "^9.0.0",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
