{
  "name": "etsy-backend",
  "version": "1.0.0",
  "description": "Etsy-like marketplace backend",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "seed": "tsx src/db/seed.ts",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "opossum": "^9.0.0",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
