{
  "name": "github-backend",
  "version": "1.0.0",
  "description": "GitHub clone - code hosting platform backend",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx --watch src/index.ts",
    "dev:server1": "PORT=3001 npm run dev",
    "dev:server2": "PORT=3002 npm run dev",
    "dev:server3": "PORT=3003 npm run dev",
    "start": "NODE_ENV=production tsx src/index.ts",
    "db:seed": "tsx src/db/seed.ts",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "diff": "^5.2.0",
    "express": "^4.18.3",
    "express-session": "^1.18.0",
    "isomorphic-git": "^1.25.6",
    "multer": "^1.4.5-lts.1",
    "opossum": "^9.0.0",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "redis": "^4.6.13",
    "simple-git": "^3.22.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/diff": "^5.0.9",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.0.0",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.57.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.2"
  }
}
