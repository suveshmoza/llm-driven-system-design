{
  "name": "instagram-backend",
  "version": "1.0.0",
  "description": "Instagram clone backend API",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "dev:server1": "PORT=3001 npm run dev",
    "dev:server2": "PORT=3002 npm run dev",
    "dev:server3": "PORT=3003 npm run dev",
    "dev:worker": "NODE_ENV=development tsx watch src/workers/image-worker.ts",
    "start": "NODE_ENV=production tsx src/index.ts",
    "start:worker": "NODE_ENV=production tsx src/workers/image-worker.ts",
    "db:seed": "tsx db/seed.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "bcryptjs": "^3.0.2",
    "cassandra-driver": "^4.7.2",
    "connect-redis": "^8.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.1",
    "ioredis": "^5.4.1",
    "minio": "^8.0.2",
    "multer": "^1.4.5-lts.1",
    "opossum": "^9.0.0",
    "pg": "^8.13.1",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "sharp": "^0.33.5",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.5",
    "@types/opossum": "^8.1.7",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
